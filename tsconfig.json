{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "module": "es2015",
    "outDir": "./out",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./out/**/*"]
}
